<title>Tokimon Trainer Database</title>

<p id="notice"><%= notice %></p>

<body>
<h1>List of Trainers</h1>

<table style="width:45%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= trainer.name %></td>
        <td><%= trainer.level %></td>
        <td><%= trainer.description %></td>
        <td><%= link_to 'Show', trainer, {:style=>'color: #ff0055;'} %></td>
        <td><%= link_to 'Edit', edit_trainer_path(trainer), {:style=>'color: #ff0055;'} %></td>
        <td><%= link_to 'Destroy', trainer, method: :delete, data: { confirm: 'Are you sure?' }, :style=>'color: #ff0055;' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
</body>

<%= link_to 'New Trainer', new_trainer_path, {:style => "margin-left: 10px; color: #f2f2f2;"} %>
