<h1>Editing Tokimon</h1>

<%= render 'form' %>

  <% if !@tokimon.fly %>
  <% @tokimon.fly = 0 %>
  <% end %>

  <% if !@tokimon.fight %>
  <% @tokimon.fight = 0 %>
  <% end %>

  <% if !@tokimon.fire %>
  <% @tokimon.fire = 0 %>
  <% end %>

  <% if !@tokimon.water %>
  <% @tokimon.water = 0 %>
  <% end %>

  <% if !@tokimon.electric %>
  <% @tokimon.electric = 0 %>
  <% end %>

  <% if !@tokimon.ice %>
  <% @tokimon.ice = 0 %>
  <% end %>


  <% @tokimon.total = @tokimon.fly + @tokimon.fight + @tokimon.fire + @tokimon.water + @tokimon.electric + @tokimon.ice %>
  <% @tokimon.save %>


<%= link_to 'Show', @tokimon, {:style=>'color: #f2f2f2;'} %> 
<%= link_to 'Back', tokimons_path, {:style=>'color: #f2f2f2;'} %>
