<title>Tokimon Database</title>

<p id="notice"><%= notice %></p>

<body>
<h1>Listing Tokimons</h1>

<table style="width:55%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Fly</th>
      <th>Fight</th>
      <th>Fire</th>
      <th>Water</th>
      <th>Electric</th>
      <th>Ice</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tokimons.each do |tokimon| %>
      <tr>
        <td><%= tokimon.name %></td>
        <td><%= tokimon.weight %></td>
        <td><%= tokimon.height %></td>
        <td><%= tokimon.fly %></td>
        <td><%= tokimon.fight %></td>
        <td><%= tokimon.fire %></td>
        <td><%= tokimon.water %></td>
        <td><%= tokimon.electric %></td>
        <td><%= tokimon.ice %></td>
        <td><%= tokimon.total %></td>
        <td><%= link_to 'Show', tokimon, {:style=>'color: #ff0055;'} %></td>
        <td><%= link_to 'Edit', edit_tokimon_path(tokimon), {:style=>'color: #ff0055;'} %></td>
        <td><%= link_to 'Destroy', tokimon, method: :delete, data: { confirm: 'Are you sure?' }, :style=> 'color: #ff0055;' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</body>

